{
    "name": "hana-opensap-cloud-2020",
    "version": "1.202008.1",
    "description": "openSAP HANA Course Exercise Materials Updated for HANA Cloud 2020",
    "repository": "https://github.com/SAP-samples/hana-opensap-cloud-2020",
    "license": "SEE LICENSE IN LICENSE",
    "private": false,
    "dependencies": {
        "@sap/cds": "^4.1",
        "@sap/hana-client": "^2.5",
        "@sap/xssec": "^3.0",
        "@sap/audit-logging": "3.1",
        "express": "^4.17",
        "passport": "^0.4"
    },
    "devDependencies": {
        "chai": "^4.2",
        "chai-as-promised": "^7.1",
        "chai-subset": "^1.6",
        "sqlite3": "^5"
    },
    "scripts": {
        "dbbuild": "cds build && cd ./db && npm start",
        "userbuild": "cds build && cd ./user_db && npm start",
        "srv": "cds build && cd ./srv && npm start",
        "env": "cp ./default-env.json ./db/default-env.json && cp ./default-env.json ./srv/default-env.json",
        "build": "npx cds build/all --clean",
        "start": "npx cds run",
        "watch": "npx cds watch",
        "mocha": "npx mocha || echo",
        "jest": "npx jest --verbose",
        "test": "npm run jest -s"
    },
    "jest": {
        "testEnvironment": "node"
    },
    "cds": {
        "auth": {
            "passport": {
                "strategy": "mock",
                "users": {
                    "alice": {
                        "roles": [
                            "admin",
                            "Admin"
                        ],
                        "ID": "alice@sap.com",
                        "password": "secret",
                        "userAttributes": {
                            "country": "US"
                        }
                    }
                }
            }
        },
        "build": {
            "target": ".",
            "tasks": [
                {
                    "src": "db",
                    "for": "hana",
                    "options": {
                        "model": [
                            "db",
                            "srv"
                        ]
                    }
                },
                {
                    "src": "user_db",
                    "for": "hana",
                    "options": {
                        "model": [
                            "user_db"
                        ]
                    }
                },
                {
                    "src": "srv",
                    "for": "node-cf",
                    "options": {
                        "model": [
                            "db",
                            "srv"
                        ]
                    }
                }
            ]
        },
        "features": {
            "snapi": true
        },
        "i18n": {
            "folders": [
                "_i18n"
            ]
        },
        "odata": {
            "version": "v4"
        },
        "hana": {
            "deploy-format": "hdbtable"
        },
        "requires": {
            "db": {
                "kind": "hana"
            },
            "uaa": {
                "kind": "xsuaa"
            }
        }
    }
}
