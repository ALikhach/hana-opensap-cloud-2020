{
    "name": "hana-opensap-cloud-2020",
    "version": "1.202006.0",
    "description": "openSAP HANA Course Exercise Materials Updated for HANA Cloud 2020",
    "repository": "<Add your repository here>",
    "license": "SAP SAMPLE CODE LICENSE",
    "private": true,
    "dependencies": {
        "@sap/cds": "^3.34.2",
        "@sap/hana-client": "^2.4.196",
        "@sap/xssec": "^3.0.3",
        "express": "^4",
        "passport": "^0.4.0"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-subset": "^1.6.0",
        "sqlite3": "^4"
    },
    "scripts": {
        "dbbuild": "cds build && cd ./db && npm start",
        "start": "npx cds run",
        "watch": "npx cds watch",
        "mocha": "npx mocha || echo",
        "jest": "npx jest --verbose",
        "test": "npm run jest -s"
    },
    "jest": {
        "testEnvironment": "node"
    },
    "cds": {
        "auth": {
            "passport": {
                "strategy": "mock",
                "users": {
                    "alice": {
                        "roles": [
                            "admin"
                        ],
                        "ID": "alice@sap.com",
                        "password": "secret",
                        "userAttributes": {
                            "country": "US"
                        }
                    }
                }
            }
        },
        "build": {
            "target": ".",
            "tasks": [
                {
                    "src": "db",
                    "for": "hana",
                    "options": {
                        "model": [
                            "db",
                            "srv"
                        ]
                    }
                },
                {
                    "src": "srv",
                    "for": "node-cf",
                    "options": {
                        "model": [
                            "db",
                            "srv"
                        ]
                    }
                }
            ]
        },
        "features": {
            "snapi": true
        },
        "i18n": {
            "folders": [
                "_i18n"
            ]
        },
        "odata": {
            "version": "x4"
        },
        "hana": {
            "deploy-format": "hdbtable",
            "syntax": "hdi"
        },
        "requires": {
            "db": {
                "kind": "hana"
            },
            "uaa": {
                "kind": "xsuaa"
            }
        }
    }
}
